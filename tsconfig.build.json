{
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "**/dist",
    "**/tests"
  ],
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "removeComments": true,
    "paths": {
      "@monorepo/*": [
        "./packages/*/"
      ]
    },
  },
}
